<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tuit.ar" android:versionCode="1" android:versionName="1.0">
	<application android:icon="@drawable/icon2" android:label="@string/app_name">
		<activity android:name=".activities.SelectAccount"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
				<category android:name="android.intent.category.BROWSABLE"></category>
				<data android:scheme="tuitar" android:host="login"></data>
			</intent-filter>
		</activity>
		<activity android:name=".activities.timeline.Friends"></activity>
		<activity android:name=".activities.timeline.Replies"></activity>
		<activity android:name=".activities.timeline.Favorites"></activity>
		<activity android:name=".activities.timeline.DirectMessages"></activity>
		<activity android:name=".activities.timeline.User"></activity>
		<activity android:name=".activities.timeline.ViewConversation"></activity>
		<activity android:name=".activities.Preferences"></activity>
		<activity android:name=".activities.NewTweet"></activity>
		<activity android:name=".activities.NewDirectMessage"></activity>
		<activity android:name=".activities.Profile"></activity>
		<activity android:name=".activities.Preview"></activity>

		<service android:name="com.tuit.ar.services.Updater"></service>
		<receiver android:name=".models.Settings" android:enabled="true"
			android:priority="0">
			<intent-filter>
				<action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
</manifest> 